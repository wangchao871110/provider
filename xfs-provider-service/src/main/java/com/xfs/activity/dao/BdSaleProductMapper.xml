	<select id="querySaleProduct" parameterType="Object" resultType="map">
		SELECT bsp.sp_id,bsp.product_id,bsp.sale_price,bsp.keyword,bsp.memo,ss.sp_name,smp.product_name,GROUP_CONCAT(ba.name) AS area_names,ss.logo
		FROM bd_sale_product bsp
		LEFT JOIN sps_mall_product smp ON smp.product_id = bsp.product_id
		LEFT JOIN sp_service ss ON ss.sp_id = bsp.sp_id
		LEFT JOIN sps_mall_productarea sm ON smp.product_id = sm.product_id
		LEFT JOIN bs_area ba ON ba.area_id = sm.area_id
		WHERE bsp.activity_id = #{activityId} GROUP BY smp.product_id;
