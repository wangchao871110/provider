<select id="findAllByContractAttIdAndAreaId" resultType="java.util.Map" parameterType="Object">
	SELECT mi.item_id, mi.item_name,mp.price,mp.feetype FROM cm_contract_attitem mp
		inner join cm_contract_att ca on ca.contract_att_id=mp.contract_att_id
		INNER JOIN bs_mall_item mi ON mp.item_id = mi.item_id
		inner join bs_mall_item_category c on mi.category_id = c.category_id 
	WHERE mp.contract_att_id = #{contractAttId} AND ca.area_id = #{itemId}
	order by mp.feetype desc
</select>

