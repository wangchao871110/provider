	INNER JOIN bs_mall_item mi ON mp.item_id = mi.item_id
	inner join bs_mall_item_category c on mi.category_id = c.category_id AND c.category_type != 'CI'
	WHERE (mp.area_id = #{areaId} or mp.area_id = -1)
	<if test="itemId != '' and itemId != null ">and mi.item_id not in (${itemId})</if>
	GROUP BY mi.item_id
</select>
	
