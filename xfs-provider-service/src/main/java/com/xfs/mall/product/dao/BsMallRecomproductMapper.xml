<!-- 商城首页推荐的商品列表 -->
<select id="FindBS_MALL_RECOMPRODUCT" resultType="java.util.Map" parameterType="Object">
	SELECT mp.`product_id`, mp.`product_name`, mp.`area_id`, mp.`per_month`, mp.`per_month_price`,
					mp.`once`, mp.`once_price`, mp.`photo`, ss.`sp_name`, ss.short_name, ss.`logo`
					<!--, a.`name` AS area_name-->
			FROM `bs_mall_recomproduct` rp
			INNER JOIN sps_mall_product mp ON rp.product_id = mp.`product_id`
			INNER JOIN sps_mall_product_item mpi ON mp.`product_id` = mpi.`product_id`
			INNER JOIN bs_mall_item mi ON mpi.`item_id` = mi.`item_id`
			INNER JOIN sp_service ss ON mp.`sp_id` = ss.`sp_id`
			INNER JOIN sps_mall_info i ON ss.sp_id = i.sp_id
			<!--INNER JOIN bs_area a ON mp.`area_id` = a.`area_id`-->
			WHERE rp.dr = 0 AND i.dr = 0 AND mp.`state` = 'ON' AND mp.`service_type` = 'B' AND mpi.`dr` = 0 AND mi.`dr` = 0
					AND ss.enabled_mall = 'SIGNED' AND NOW() BETWEEN rp.begintime AND rp.endtime
			GROUP BY mp.`product_id`
			ORDER BY rp.orderby DESC, rp.id DESC
</select>

