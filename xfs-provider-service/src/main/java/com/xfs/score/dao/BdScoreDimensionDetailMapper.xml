	<select id="getBdScoreDimensionDetailList" resultType="java.util.HashMap" parameterType="Object">
		SELECT
			bsdd.*,bsd.weight  as dimWeight,bsd.default_score as dimDefaultScore, bsi.weight as itemWeight ,bsi.default_score as itemDefaultScore,bsi.item_name
		FROM
		BD_SCORE_DIMENSION_DETAIL bsdd
		JOIN bd_score_dimension bsd ON bsdd.dim_id = bsd.dim_id
		JOIN bd_score_item bsi ON bsi.item_id = bsdd.item_id
		WHERE
		bsdd.cal_version = #{calVersion} and bsdd.dr=0 AND  bsdd.score_target_type=#{type}
		GROUP BY bsdd.cal_version,bsdd.score_target_type,bsdd.score_target_id,bsdd.dim_id
