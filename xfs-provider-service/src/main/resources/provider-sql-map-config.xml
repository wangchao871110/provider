<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties>
		<property name="dialect" value="mysql" />
	</properties>
	<settings>
		<!-- java驼峰法命名字段与数据库对应关系 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>

	<plugins>
		<plugin interceptor="org.mybatis.extend.interceptor.PaginationInterceptor" />
		<plugin interceptor="org.mybatis.extend.interceptor.SqlLogInterceptor"/>
		<!-- mybatis写出sql记录控件(拦截器) -->
		<plugin interceptor="com.xfs.common.interceptor.MybatisInterceptor">  <!-- sql统计的拦截器 -->
		</plugin>
	</plugins>
	<mappers>

	</mappers>

</configuration>
